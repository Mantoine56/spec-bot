# ==============================================================================
# SPEC-BOT ENVIRONMENT CONFIGURATION
# ==============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env files with real API keys!

# ==============================================================================
# LLM API CONFIGURATION
# ==============================================================================

# OpenAI API Key (required)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-actual-api-key-here

# Anthropic API Key (optional - for Claude models)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# Default LLM Provider (openai or anthropic)
DEFAULT_LLM_PROVIDER=openai

# Default Model (gpt-4.1, gpt-4o, claude-3-sonnet-20240229, etc.)
DEFAULT_MODEL=gpt-4.1

# ==============================================================================
# APPLICATION CONFIGURATION
# ==============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Debug mode (true/false)
DEBUG=true

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ==============================================================================
# BACKEND CONFIGURATION
# ==============================================================================

# FastAPI host and port
HOST=localhost
PORT=8000

# CORS origins (comma-separated for multiple origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ==============================================================================
# FILE MANAGEMENT
# ==============================================================================

# Directory for generated specifications
SPECS_DIR=.specbot/specs

# Directory for backup files
BACKUPS_DIR=.specbot/backups

# Maximum file size for uploads (in MB)
MAX_FILE_SIZE_MB=10

# ==============================================================================
# WORKFLOW CONFIGURATION
# ==============================================================================

# Default timeout for LLM requests (in seconds)
LLM_TIMEOUT=120

# Maximum retries for failed requests
MAX_RETRIES=3

# Enable research integration (true/false)
RESEARCH_ENABLED=false

# ==============================================================================
# RESEARCH INTEGRATION (Optional)
# ==============================================================================

# Tavily API Key (for web search)
# Get from: https://tavily.com/
TAVILY_API_KEY=your-tavily-api-key-here

# Serper API Key (alternative web search)
# Get from: https://serper.dev/
SERPER_API_KEY=your-serper-api-key-here

# ==============================================================================
# DATABASE (Future - if needed)
# ==============================================================================

# Database URL (when we add persistent storage)
# DATABASE_URL=sqlite:///.specbot/database.db
# DATABASE_URL=postgresql://user:password@localhost:5432/specbot

# ==============================================================================
# REDIS (Future - for caching)
# ==============================================================================

# Redis URL (when we add caching)
# REDIS_URL=redis://localhost:6379

# ==============================================================================
# MONITORING & ANALYTICS (Future)
# ==============================================================================

# Sentry DSN (for error tracking)
# SENTRY_DSN=your-sentry-dsn-here

# Analytics key
# ANALYTICS_KEY=your-analytics-key-here

# ==============================================================================
# DEVELOPMENT TOOLS
# ==============================================================================

# Enable hot reload (true/false)
HOT_RELOAD=true

# Enable API documentation (true/false)  
ENABLE_DOCS=true

# Profiling enabled (true/false)
ENABLE_PROFILING=false
